<%- include('partials/header'); %> 
<div id="Login">
  <div class="container-fluid">
    <div class="row">
      <div id="sidebar" class="col-md-2">
        <h2><img class="pt-4 pb-2" src="https://via.placeholder.com/150" alt=""></h2>
        <h2><img class="pb-2" src="https://via.placeholder.com/150" alt=""></h2>
        <h2><img class="pb-2" src="https://via.placeholder.com/150" alt=""></h2>
        <h2><img class="pb-2" src="https://via.placeholder.com/150" alt=""></h2>
      </div>  
      <main role="main" class="col-md-10">
        <h1>Login</h1>
        <% if (locals.errors && locals.errors.login { %>
          <% locals.errors.login.forEach(function(error) { %>
            <p class="alert alert-primary" role="alert"><%= error %></p>
          <% }) %>
        <% } %>
        
        
        <div class="message">
          <form action="/login" method="post">
            <input type="email" name="email" placeholder="Email">
            <input type="password" name="password" placeholder="Password">
            <button type="submit">Login</button>
            <a class="nav-link" href="/register"></i>register</a>
          </form>
        </div>
      </main>
    </div> <!-- end .row --> 
  </div><!-- end .container-fluid -->
</div><!-- end #main -->
<%- include('partials/footer'); %>