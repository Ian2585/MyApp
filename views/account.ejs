<%- include('partials/header'); %> 
<div id="Register">
  <div class="container-fluid">
    <div class="row">
      <div id="sidebar" class="col-md-2">
        <h2><img class="pt-4 pb-2" src="https://via.placeholder.com/150" alt=""></h2>
        <h2><img class="pb-2" src="https://via.placeholder.com/150" alt=""></h2>
        <h2><img class="pb-2" src="https://via.placeholder.com/150" alt=""></h2>
        <h2><img class="pb-2" src="https://via.placeholder.com/150" alt=""></h2>
      </div>  
      <main role="main" class="col-md-10">
        <h1>Account</h1>
        <% if (locals.errors && locals.errors.profile) { %>
          <% locals.errors.profile.forEach(function(error) { %>
            <p class="alert alert-primary" role="alert"><%= error %></p>
          <% }) %>
        <% } %>
        
        <div class="message">
            <form action="/account" method="POST" enctype="multipart/form-data"> 
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" value="<%= locals.user.email %>">
              
            
            <div class="form-group">
              <label for="exampleInputPassword1">name</label>
              <input type="text" name="displayName" class="form-control" id="exampleInputPassword1" placeholder="name" value="<%= locals.user.displayName %>">
            </div>
            <div class="custom-file">
              <input type="file" name="avatar" class="custom-file-input" id="customFile">
              <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
              <p class="userimage"  style="padding:1rem;">
                <img src="<%= locals.user.photoURL %>" alt="">

              </p>
          
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="nav-link" href="/register"></i>register</a>
            </form>
        </div>
      </main>
    </div> <!-- end .row --> 
  </div><!-- end .container-fluid -->
</div><!-- end #main -->
<%- include('partials/footer'); %>